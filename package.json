{
  "name": "asylum-connect",
  "version": "1.0.0",
  "scripts": {
    "start": "cd server && node server.js",
    "test": "cd server && mocha test/test.js --timeout 10000",
    "client": "cd ./client && npm run start",
    "server": "cd server && nodemon server.js",
    "dev": "NODE_ENV=dev && concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd ./client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.18.3",
    "config": "^3.1.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.20",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "uui": "^1.0.7",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "concurrently": "^3.5.0",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.4"
  }
}
